.panel.panel-default
  .panel-heading
    %h4 
      #{@user.name.titleize}' games
      = link_to 'Users', users_path, class: 'pull-right btn btn-sm btn-primary'
  .panel-body
    .table-responsive
      %table.table
        %thead
          %tr
            %th #
            %th Game Date
            %th Amount
        %tbody
          - @payments.each_with_index do |payment, i|
            %tr
              %td= i + 1 
              %td= format_date(payment.game.date)
              %td= payment.amount
