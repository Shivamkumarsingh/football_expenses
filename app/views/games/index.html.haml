.panel.panel-default
  .panel-heading
    %h4 
      Games
      = link_to 'New Game', new_game_path, class: 'pull-right btn btn-sm btn-primary'
  %table.table
    %thead
      %tr
        %th #
        %th Date
        %th No of Players
        %th Per Player Amount
        %th Actions
    %tbody
      - @games.each_with_index do |game, i|
        %tr
          %td= i + 1 
          %td= format_date(game.date)
          %td= players_count = game.payments.count
          %td= players_count > 0 ? (game.amount / players_count) : '-NA-'
          %td
            = link_to 'Edit', edit_game_path(game), class: 'btn btn-sm btn-default'
            = link_to 'View', game_path(game), class: 'btn btn-sm btn-default'
